<div class="yui3-g item nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :administrative_process_budget_allocation_item_id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-8">
      <%= f.input :order, :input_html => { :readonly => 'readonly' }%>
    </div>

    <div class="yui3-u-7-8">
      <%= f.input :material, :disabled => true %>
    </div>
  </div>

  <div class="yui3-g">
    <div class="yui3-u-1-8">
      <%= f.input :reference_unit, :disabled => true %>
    </div>

    <div class="yui3-u-3-8">
      <%= f.input :quantity, :disabled => true, :input_html => { :value => f.object.decorator.quantity } %>
    </div>

    <div class="yui3-u-3-8">
      <%= f.input :unit_price, :disabled => true, :input_html => { :value => f.object.decorator.unit_price } %>
    </div>
  </div>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :minimum_reduction_percent, :input_html => { :class => 'minimum_reduction_percent' },
                                              :disabled => f.object.minimum_reduction_value.to_f > 0 %>
    </div>

    <div class="yui3-u-1-2">
      <%= f.input :minimum_reduction_value, :input_html => { :class => 'minimum_reduction_value' },
                                            :disabled => f.object.minimum_reduction_percent.to_f > 0 %>
    </div>
  </div>
  <div class="yui3-g">
    <div class="yui3-u-1">
      <%= f.input :detailed_description %>
    </div>
  </div>
</div>
