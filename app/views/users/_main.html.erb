<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :authenticable, :as => :modal, :modal_url => modal_employees_path, :input_html => {"data-hidden-field-id" => "user_authenticable_id"}, :hidden_field => false %>
    <%= f.input :authenticable_id, :as => :hidden %>
    <%= f.input :authenticable_type, :as => :hidden, input_html: {value: "Employee"} %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :login %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :email %>
  </div>

  <div class="yui3-u-1-2">
    <div class="yui3-g">
      <div class="yui3-u-1-2">
        <%= f.input :password, :required => resource.password_required? %>
      </div>

      <div class="yui3-u-1-2">
        <%= f.input :password_confirmation, :required => resource.password_required? %>
      </div>
    </div>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :profile %>
  </div>
  <div class="yui3-u-1-4">
    <%= f.input :activated, :input_html => {'style' => 'margin:20% 5% 0% 0%'} %>
  </div>
  <div class="yui3-u-1-4">
    <%= f.input :electronic_auction, :input_html => {'style' => 'margin:20% 5% 0% 0%'} %>
  </div>
</div>
