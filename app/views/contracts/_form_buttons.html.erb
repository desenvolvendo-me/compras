<div class="buttons">
  <%= link_to 'Rescisão', contract_termination_path, :class => 'button primary' if f.object.persisted? %>
  <%= link_to 'Ocorrências Contratuais', occurrence_contractual_historics_path(:contract_id => f.object.id), :class => 'button primary' if f.object.persisted? %>

  <%= f.button :submit if can?(:modify, main_controller_name) %>
  <%= f.button :back %>

  <% if f.object.persisted? && can?(:destroy, main_controller_name) %>
    <%= f.button :destroy %>
  <% end %>
</div>
