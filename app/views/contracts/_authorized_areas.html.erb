<div id="authorized_areas">

  <div class="nested-fields add-margin-bottom">
    <%= hidden_field_tag :item_id, nil, :name => 'authorized_area[id]' %>

    <%= f.input :department, :as => :auto_complete, :fake => true, :required => true %>

    <div class="yui3-u-1-6">
      <%= button_tag 'Adicionar', type: :button,
                     :class => 'button add-nested-record field-without-label',
                     'data-template' => 'licitation_process_items_template',
                     'data-records' => 'items-records',
                     'data-disabled' => not_updateable_message, id: "add-department" %>
    </div>
  </div>

  <%= f.error :authorized_areas %>

  <table id="items-records" class="records">
    <thead>
    <tr>
      <th><%= Contract.human_attribute_name :department %></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= f.association :authorized_areas, :collection => localized(f.object.authorized_areas) do |p| %>
      <%= render 'contract_authorized_areas/form',
                 id: p.object.id,
                 department: p.object.department,
                 department_id: p.object.department_id,
                 f: p %>
    <% end %>
    </tbody>
  </table>

  <%= mustache "licitation_process_items_template" do %>
    <%= f.association :authorized_areas_attributes, :collection => f.object.authorized_areas.build, :index => '{{uuid}}' do |p| %>
      <%= render 'contract_authorized_areas/form',
                 id: '{{id}}',
                 department: '{{department}}',
                 department_id: '{{department_id}}',
                 f: p %>
    <% end %>
  <% end %>
</div>
