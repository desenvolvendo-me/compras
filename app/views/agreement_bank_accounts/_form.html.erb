<div class="agreement-bank-account nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <%= f.input :bank_account %>

  <p>
    <%= link_to_modal_info "#{'agreement_agreement_bank_accounts_attributes_' unless f.object.persisted?}#{f.nested_identifier}_bank_account", f.object.bank_account %>
  </p>

  <div class="yui3-g">
    <div class="yui3-u-1-4">
      <%= f.input :creation_date, :disabled => true, :input_html => { :value => f.object.decorator.creation_date } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :desactivation_date %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :status, :disabled => true %>
    </div>
  </div>


  <p class="yui3-u">
    <input type="button" class="button negative remove-agreement-bank-account" value="Remover Conta">
  </p>
</div>
