<%= render 'list' %>

        <div class="yui3-g section-blue">
          <div class="yui3-u-1">
            <div class="ellipsis">
              <p><b>Pregão:</b>
                <span class="white"><%= "#{resource.licitation_number}/#{resource.year}" %></span>
              </p>
            </div>
          </div>
        </div>

        <div class="yui3-g section-gray">
          <div class="yui3-u-1-2 ">
            <p>Objeto: <%= resource.object %></p>
            <p>Edital disponível a partir de: <%= l(resource.notice_availability) if resource.notice_availability %></p>
            <p>Endereço: <%= address(resource) %> </p>
            <p>Telefone: <%= contact(resource) %> </p>
            <p>Entrega da proposta: <%= l(resource.proposal_delivery) if resource.proposal_delivery%></p>
            <p>Abertura da proposta: <%= l(resource.bid_opening) if resource.bid_opening %></p>
          </div>

          <div class="yui3-u-1-2 actions">
            <%= link_to "Visualizar", edit_resource_path(resource), class: 'button primary' %>
            <%= link_to "Entrar Disputa", auction_providers_register_external_path, class: 'button primary' %>
          </div>
        </div>
      </td>
    </tr>

  </tbody>
</table>

<style>
  .section-blue{
    height: 43px;
    background-color: #7e99b5;
    font-size: 22px;
    padding: 10px;
  }
  table.records{
    color: black;
  }
    .section-gray{
      background-color: #e6e5e5bf;
      padding: 10px;
    }

    .section-gray p{
      font-size: 22px;
    }

    .section-gray a, button{
      font-size: 18px;
      border-radius: 11px !important;
    }
    .white{
      color:white;
    }
    .actions{
      text-align: end;
      padding-top: 7px;
    }
  .ellipsis{
    white-space: word;
    overflow:hidden;
    height: 49px;
  }


</style>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>

<button type="button" class="btn btn-primary teste">
  Launch
</button>

<script>
    $(".teste").click(function(){
      $('#exampleModal').modal('show');
    });

</script>

