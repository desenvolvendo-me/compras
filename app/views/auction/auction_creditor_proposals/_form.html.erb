<%= f.input :auction_id, as: :hidden %>

<h5><%= "Empresa: #{current_user.try(:authenticable).try(:name)}" %></h5>
<h5><%= "Endereço: #{f.object.auction.street},   #{f.object.auction.neighborhood},  #{f.object.auction.city}" %></h5>
<h5><%= "CNPJ: #{current_user.try(:authenticable).try(:person).try(:cnpj)}" %></h5>

<h5 class="mt-4" style="color:#3f6e9d;">Vem Apresentar Proposta:</h5>

<div class="mh-400 my-2">
  <div>
  <table id="items-records" class="records">
    <thead>
    <tr>
      <th>Material</th>
      <th width="15%"><%= AuctionCreditorProposalItem.human_attribute_name :manufacturer %></th>
      <th width="15%"><%= AuctionCreditorProposalItem.human_attribute_name :model_version %></th>
      <th width="8%"><%= AuctionCreditorProposalItem.human_attribute_name :quantity %></th>
      <th width="11%"><%= AuctionCreditorProposalItem.human_attribute_name :unit_price %></th>
      <th width="11%"><%= AuctionCreditorProposalItem.human_attribute_name :global_price %></th>
    </tr>
    </thead>
    <tbody>
    <% if f.object&.auction&.items.blank? %>
      <tr><td colspan="7"><div class="alert alert-warning"><strong>Não foram cadastrados itens para esse pregão.</strong></div></tr></td>
    <% end %>
    <% f.object&.auction&.items&.each do |auction_item| %>
      <%= f.simple_fields_for :auction_creditor_proposal_items, init_item(f.object, auction_item) do |p| %>
        <%= render 'auction/auction_creditor_proposa_items/form',
                   material: auction_item.material.to_s,
                   item: auction_item,
                   f: p %>
      <% end %>
    <% end %>
    </tbody>
  </table>
  </div>
</div>

<h4>Declarações</h4>
<h6>* Estas Declarações substitui o envio das mesmas</h6>
