  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :term %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :impediment %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :proposal_independent %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :art_5 %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :art_93_pcd %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-check">
        <%= f.input :art_529_clt %>
      </div>
    </div>
  </div>
</div>

<div class="form-row mt-4">
  <div class="col">
    <div class="form-group">
      <%= f.input :proposal_doc, input_html: {accept: ('application/pdf')} %>
    </div>
  </div>

  <div class="col">
    <div class="form-group">
      <%= f.input :proposal_qualification_doc, input_html: {accept: ('application/pdf')} %>
    </div>
  </div>
</div>

<div class="form-row" style="margin-top: -11px">
  <% unless f.object.proposal_send_date.blank? %>
    <div class="col" >
      <%= link_to f.object.proposal_doc_identifier, f.object.proposal_doc_url, :target => '_blank' if f.object.proposal_doc? %> anexado em: <%= f.object.proposal_send_date %>
    </div>
  <% end %>

  <% unless f.object.qualification_send_date.blank? %>
    <div class="col">
      <%= link_to f.object.proposal_qualification_doc_identifier, f.object.proposal_qualification_doc_url, :target => '_blank' if f.object.proposal_qualification_doc? %> anexado em: <%= f.object.qualification_send_date %>
    </div>
  <% end %>
</div>

