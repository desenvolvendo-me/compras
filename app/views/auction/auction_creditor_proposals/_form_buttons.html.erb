<div class="buttons">
  <% if can?(:modify, main_controller_name) %>
    <%= f.button :submit, 'data-disabled' => not_updateable_message  %>
  <% end %>

  <% if f.object.persisted? && can?(:modify, main_controller_name) %>
    <%= link_to 'Alterar', "#", id:'edit_proposal', class:'button primary' %>
  <% end  %>

  <% if f.object.persisted? && can?(:destroy, main_controller_name) %>
    <%= f.button :destroy, 'Excluir', 'data-disabled' => not_destroyable_message %>
  <% end %>

  <%= f.button :back %>
</div>
<style>
  .button.negative{
    float: unset !important;
  }
</style>