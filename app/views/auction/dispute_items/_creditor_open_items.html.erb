<table id="items" class="records">
  <thead>
  <th>Status</th>
  <th>Descrição</th>
  <th>Seu Último Lançe</th>
  <th>Melhor Lance/Proposta</th>
  <th>Fornecedor Vencendo</th>
  <th>Dê um lance:</th>
  <th width="4%"></th>
  <th width="5%"></th>
  </thead>

  <tbody>
  <% @auction.trading_items.each do |dispute_item| %>
    <tr>
      <td><%= check_status_my_bids dispute_item %></td>
      <td><%= dispute_item.to_s %></td>
      <td><%= dispute_item.bid_or_proposal_creditor(@current_user.authenticable) %></td>
      <td><%= dispute_item.decorator.lowest_bid_or_proposal_amount %></td>
      <td><%= dispute_item.lowest_bid_or_proposal_accreditation_creditor %></td>
      <td><%= text_field_tag :bid_amount, "", 'data-decimal': true, class: 'creditor-bid' %></td>
      <td><%= button_tag 'Salvar', type: :button, class: 'button primary small-button' %></td>
      <td><%= button_tag 'Desistir', type: :button, class: 'button primary small-button' %></td>
    </tr>
  <% end.empty? and begin %>
    <tr><td class="text-sm-center" colspan="7">Nenhum item foi liberado para lançes ainda</td></tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col">
    <%= render 'chat' %>
  </div>
</div>

<style>
  h2#title{
    display: none;
  }

  div#title h5{
    font-size: 15px;
    color: #4c7baa;
  }
</style>