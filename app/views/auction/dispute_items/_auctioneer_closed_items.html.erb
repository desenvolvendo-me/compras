<div class="title-section">Itens / Grupo de Itens do Pregão:</div>
<table id="items" class="records">
  <thead>
  <th>Item</th>
  <th>Melhor Proposta</th>
  <th>Fornecedor Proposta</th>
  <th>Status</th>
  <th>Adjudicar Proposta</th>
  </thead>

  <tbody>
  <%  @auction.trading_items.status_closed.each do |trading_item| %>
    <tr id="item-<%= trading_item.id %>">
      <td><%= trading_item.to_s %></td>
      <td><%= trading_item.decorator.lowest_bid_or_proposal_amount %></td>
      <td><%= trading_item.lowest_bid_or_proposal_accreditation_creditor %></td>
      <td class="status"><%= trading_item.status_humanize %></td>
      <td class="status"><%= render 'link_to_licitation_processes_ratifications', :tab => 'ratifications', :status => 'closed' %></td>
    </tr>
  <% end.empty? and begin %>
    <tr><td colspan="6">Não há items cadastrados para as propostas dos fornecedores.</td></tr>
  <% end %>
  </tbody>
</table>


