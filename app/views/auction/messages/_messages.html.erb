<div class="media msg ">
  <a class="pull-left" href="#">
    <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,">
  </a>
  <div class="media-body">
    <small class="pull-right time"><i class="fa fa-clock-o"></i><%= message&.created_at&.strftime("%I:%M %p") || "{{created_at}}" %></small>
    <%if message&.sender&.authenticable_type == 'Creditor' %>
      <div class="media-heading"><%= message&.sender&.authenticable&.name.to_s + " / "+ message&.sender&.profile&.decorator&.creditor_name || "{{sender_name}}"  %></div>
    <%else %>
      <div class="media-heading"><%= message&.sender&.authenticable&.name.to_s + " / "+ message&.sender&.profile&.get_profile_last_name.to_s || "{{sender_name}}"  %></div>
    <% end %>

    <small class="col-lg-10 message-body"><%= message&.body || "{{body}}"%></small>
  </div>
</div>
