<div class="representative nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :number, :disabled => true, :input_html => { :class => "number" } %>
    </div>

    <div class="yui3-u-1-2">
      <%= f.input :individual %>
    </div>
  </div>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :provider, :input_html => { :class => "provider" } %>
    </div>

    <div class="yui3-u-1-2">
      <%= f.input :role %>
    </div>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-representative" value="Remover Representante" />
  </p>
</div>
