<div class="nested-data nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui-3-g">
    <div class="yui3-u-1-3">
      <%= f.input :data %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :data_type %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :required %>
    </div>
  </div>

  <p class="yui3-u button-container">
    <input type="button" class="button negative remove-data" value="Remover Dados">
  </p>
</div>
