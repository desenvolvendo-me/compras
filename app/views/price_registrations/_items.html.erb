<p>
  <input type="button" class="button affirmative add-price-registration-item<%= f.nested_identifier %>" value="Adicionar Material">
</p>

<div id="price-registration-items-<%= f.nested_identifier %>">
  <%= f.association :items, :collection => localized(f.object.items) do |p| %>
    <%= render 'price_registration_items/form', :f => p %>
  <% end %>

  <%= mustache "price-registration-items-template-#{f.nested_identifier}" do %>
    <%= f.association :items_attributes, :collection => f.object.items.build, :index => '{{uuid_price_registration_item}}' do |p| %>
      <%= render 'price_registration_items/form', :f => p %>
    <% end %>
  <% end %>
</div>

<script>
  $("#price-registration-items-template-<%= f.nested_identifier %>").nestedForm({
    add: ".add-price-registration-item<%= f.nested_identifier %>",
    remove: '.remove-price-registration-item',
    target: "#price-registration-items-<%= f.nested_identifier %>",
    uuid: 'uuid_price_registration_item',
    fieldsWrapper: '.price-registration-item',
    appendItem: false,
    inline: true
  });
</script>
