<div class="yui3-g bidder_document nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-3">
      <%= f.input :document_type %>
    </div>

    <div class="yui3-u-1-6">
      <%= f.input :document_number %>
    </div>

    <div class="yui3-u-1-6">
      <%= f.input :emission_date %>
    </div>

    <div class="yui3-u-1-6">
      <%= f.input :validity %>
    </div>

    <div class="yui3-u-1-6 field-without-label">
      <%= button_tag 'Remover', class: 'button negative remove_bidder_document',
        'data-disabled' => data_disabled %>
    </div>
  </div>
</div>
