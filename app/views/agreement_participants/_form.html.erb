<div class="nested-agreement-participant">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <%= f.input :creditor, :modal_info => true %>

  <div class="yui3-g">
    <div class="yui3-u-1-4">
      <%= f.input :value %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :kind %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :governmental_sphere %>
    </div>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-agreement-participant" value="Remover Participante">
  </p>
</div>
