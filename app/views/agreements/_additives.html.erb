<p>
  <input type="button" class="button affirmative add-agreement-additive" value="Adicionar Aditivo">
</p>

<div id="agreement-additive" data-nested-form="agreement-additive">
  <%= f.association :agreement_additives, :collection => localized(f.object.agreement_additives) do |o| %>
    <%= render 'agreement_additives/form', :f => o %>
  <% end %>
</div>

<%= mustache 'agreement-additive-template' do %>
  <%= f.association :agreement_additives_attributes, :collection => f.object.agreement_additives.build, :index => '{{uuid-agreement-additive}}' do |o| %>
    <%= render 'agreement_additives/form', :f => o %>
  <% end %>
<% end %>
