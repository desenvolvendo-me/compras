<div class="parcel nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-3">
      <%= f.input :expiration_date %>
    </div>

    <div class="yui3-u-1-3">
      <%= f.input :value, :input_html => { :class => 'parcel-value' } %>
    </div>

    <div class="yui3-u-1-3">
      <%= f.input :situation %>
    </div>
  </div>

  <div class="yui3-g">
    <div class="yui3-u-1-3">
      <%= f.input :payment_date %>
    </div>

    <div class="yui3-u-1-3">
      <%= f.input :amount_paid %>
    </div>

    <div class="yui3-u-1-3">
      <%= f.input :observation %>
    </div>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-parcel" value="Remover Parcela" />
  </p>
</div>
