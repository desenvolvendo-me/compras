<div class="parcel nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-4">
      <%= f.input :number, :disabled => true, :input_html => { :class => 'order' } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :value, :input_html => { :class => 'value' } %>
    </div>

    <div class="yui3-u-1-3 nested-remove">
      <input type="button" class="button negative remove-parcel" value="Remover Parcela">
    </div>
  </div>
</div>
