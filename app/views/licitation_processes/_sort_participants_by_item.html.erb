<% localized(resource.items).each_with_index do |item, index| %>
  <p>Item: <%= item.description %></p>
  <p>Quantidade: <%= item.quantity %></p>
  <table class="records">
    <thead>
      <tr>
        <th>
          Fornecedor vencedor
        </th>
        <th>
          Valor cotado
        </th>
        <th>
          Quantidade
        </th>
        <th>
          Valor total
        </th>
      </tr>
    </thead>

    <tbody>
      <% localized(item.winner_proposals).each do |winner| %>
        <tr>
          <td>
            <%= winner.creditor %>
          </td>
          <td>
            <%= winner.decorator.unit_price %>
          </td>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= winner.decorator.total_price %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
