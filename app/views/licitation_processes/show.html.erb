<%= render "reports/header", :report_name => "Processo de Compra #{resource}" %>

<h2>Apuração: <%= resource.judgment_form %></h2>

<% resource.decorator.all_licitation_process_classifications_groupped.each do |bidder, classifications| %>
  <h3>Fornecedor: <%= bidder.creditor %></h3>

  <table class="records">
    <thead>
      <th><%= Material.human_attribute_name :description %></th>
      <th><%= Material.human_attribute_name :reference_unit %></th>
      <th><%= AdministrativeProcessBudgetAllocationItem.human_attribute_name :quantity %></th>
      <th><%= LicitationProcessClassification.human_attribute_name :unit_price %></th>
      <th><%= LicitationProcessClassification.human_attribute_name :total_value %></th>
      <th><%= LicitationProcessClassification.human_attribute_name :situation %></th>
    </thead>

    <tbody>
      <% classifications.each_with_index do |classification, index| %>
        <%= render resource.decorator.type_of_calculation, :classification => classification, :index => index %>
      <% end %>
    </tbody>
  </table>
<% end %>
