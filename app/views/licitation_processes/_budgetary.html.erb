<div class="nested-fields add-margin-bottom">
  <%= f.simple_fields_for :budgetary, LicitationProcessBudgetary.new do |p| %>
    <% p.object_name = 'budgetary' %>
    <%= p.input :id, as: :hidden %>
    <div class="yui3-g">
      <div class="yui3-u-1-3">
        <%= p.input :secretary, :as => :auto_complete, :required => true %>
      </div>

      <div class="yui3-u-1-3">
        <%= p.input :expense, :as => :auto_complete, :required => true %>
      </div>

      <div class="yui3-u-1-3">
        <%= p.input :value, :required => true %>
      </div>
    </div>
    <div class="yui3-u-1">
      <%= button_tag 'Adicionar', type: :button,
                     :class => 'button add-nested-record field-without-label',
                     'data-template' => 'contract_financials_template',
                     'data-records' => 'financials-records',
                     'data-disabled' => not_updateable_message %>
    </div>

    <div class="hidden">
      <%= p.input :project_activity, as: :fake, input_html:{ disabled: true } %>
      <%= p.input :nature_expense, as: :fake,input_html:{ disabled: true } %>
      <%= p.input :resource_source, as: :fake,input_html:{ disabled: true } %>
    </div>
  <% end %>
</div>



<%= f.error :financials %>

<table id="financials-records" class="records">
  <thead>
  <tr>
    <th><%= LicitationProcessBudgetary.human_attribute_name :expense %></th>
    <th><%= LicitationProcessBudgetary.human_attribute_name :secretary %></th>
    <th><%= LicitationProcessBudgetary.human_attribute_name :project_activity %></th>
    <th><%= LicitationProcessBudgetary.human_attribute_name :nature_expense %></th>
    <th><%= LicitationProcessBudgetary.human_attribute_name :resource_source %></th>
    <th><%= LicitationProcessBudgetary.human_attribute_name :value %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%= f.association :budgetaries, :collection => localized(f.object.budgetaries) do |p| %>
    <%unless p.object.blank? %>
      <%= render 'licitation_process_budgetaries/form_row',
                 id: p.object.id,
                 expense: p.object.expense,
                 expense_id: p.object.expense_id,
                 secretary: p.object.secretary,
                 secretary_id: p.object.secretary_id,
                 value: p.object.value,
                 project_activity: "#{p.object.expense.project_activity.name} (#{p.object.expense.project_activity})",
                 nature_expense: p.object.expense.nature_expense,
                 resource_source: p.object.expense.resource_source,

                 f: p %>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= mustache "contract_financials_template" do %>
  <%= f.association :budgetaries_attributes, :collection => f.object.budgetaries.build, :index => '{{uuid}}' do |p| %>
    <%= render 'licitation_process_budgetaries/form_row',
               id: '{{id}}',
               expense: '{{expense}}',
               expense_id: '{{expense_id}}',
               secretary: '{{secretary}}',
               secretary_id: '{{secretary_id}}',
               value: '{{value}}',
               project_activity: '{{project_activity}}',
               nature_expense: '{{nature_expense}}',
               resource_source: '{{resource_source}}',
               f: p %>
  <% end %>
<% end %>
