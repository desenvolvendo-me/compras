<div class="signature_configuration_item">
  <div class="yui3-g nested">
    <%= f.input :id, :as => 'hidden' %>
    <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

    <div class="yui3-u-1-4">
      <%= f.input :order %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :signature, :input_html => { :class => 'signature' } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :position, :input_html => { :class => 'position' } %>
    </div>

    <div class="yui3-u-1-4 nested-remove">
      <input type="button" class="button negative remove_item" value="Remover Item">
    </div>
  </div>
</div>
