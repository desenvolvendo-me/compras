<% classifications.sort_by(&:description).each_with_index do |classification, index| %>
  <% if classification.classification == 1 || all_proposal %>
    <tr class="<%= "classification-#{classification.classification}-#{index}" %>">
      <td><%= classification.description %></td>
      <td><%= classification.reference_unit %></td>
      <td><%= classification.brand %></td>
      <td align="right"><%= classification.quantity %></td>
      <td align="right"><%= classification.decorator.unit_value %></td>
      <td align="right"><%= classification.decorator.total_value %></td>
      <td><%= classification.decorator.classification %></td>
    </tr>
  <% end %>
<% end %>
