<table class="records">
  <thead>
    <tr>
      <% resource_class.decorator.header_attributes.each do |field| %>
        <th><%= resource_class.human_attribute_name field %></th>
      <% end %>
      <th><%= "NÃºmero da #{I18n.t('activerecord.models.purchase_solicitation.one')}" %></th>
      <th><%= "#{I18n.t('activerecord.models.department.one')} da #{I18n.t('activerecord.models.purchase_solicitation.one')}" %></th>
    </tr>
  </thead>

  <tbody>
    <% collection.each do |resource| %>
      <tr id="<%= dom_id resource %>">
        <% resource_class.decorator.header_attributes.each do |field| %>
          <td>
            <% if resource_class.decorator.link?(field) %>
              <%= link_to(formatted_attribute(resource.decorator, field), edit_resource_path(resource)) %>
            <% else %>
              <%= formatted_attribute(resource.decorator, field) %>
            <% end %>
          </td>
        <% end %>
        <td><%= resource.purchase_solicitations.last %></td>
        <td><%= resource.purchase_solicitations.last.department if resource.purchase_solicitations.last%></td>
      </tr>
    <% end %>
  </tbody>
</table>
