<div class="nested-agreement-file">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :name %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :file %>
      <%= link_to f.object.file_identifier, f.object.file_url, :target => '_blank' if f.object.file? %>
    </div>

    <div class="yui3-u-1-4">
      <input type="button" class="button negative remove-agreement-file" value="Remover Arquivo">
    </div>
  </div>
</div>
