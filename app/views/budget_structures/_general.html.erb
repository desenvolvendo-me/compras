<%= f.input :digits, :as => :hidden %>
<%= f.input :level, :as => :hidden %>

<div class="yui3-g">
  <div class="yui3-u-1-3">
    <%= f.input :budget_structure_configuration %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :kind %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :budget_structure_level %>
  </div>
</div>

<%= f.input :parent, :label_html => { :id => 'label_budget_structure_parent' } %>

<div class="yui3-g">
  <div class="yui3-u-1-3">
    <label for="fake_budget_structure_code" class="integer required"><%= resource_class.human_attribute_name :code %></label>
    <%= text_field_tag 'fake_budget_structure_code', '', { :class => 'numeric integer required' } %>
    <%= f.input :code, :as => :hidden %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :budget_structure, :disabled => true %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :tce_code %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :description %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :acronym %>
  </div>
</div>

<%= f.input :administration_type %>
<%= f.input :performance_field %>
