<div class="yui3-g item nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <%= f.input :order, :disabled => true, :input_html => { :class => :order }, :wrapper_html => { :class => "yui3-u-1-4" } %>
  <%= f.input :material, :url => modal_materials_path(:licitation_object_id => f.object.licitation_object_id), :input_html => { :class => 'material' }, :wrapper_html => { :class => "yui3-u-1-4" } %>
  <%= f.input :brand, :wrapper_html => { :class => "yui3-u-1-4" } %>
  <%= f.input :reference_unit, :disabled => true, :input_html => { :class => 'reference-unit' }, :wrapper_html => { :class => "yui3-u-1-4" } %>

  <%= f.input :quantity, :input_html => { :class => 'item-quantity' }, :wrapper_html => { :class => "yui3-u-1-3" } %>
  <%= f.input :unit_price, :input_html => { :class => 'item-unit-price' }, :wrapper_html => { :class => "yui3-u-1-3" } %>
  <%= f.input :estimated_total_price, :input_html => { :class => 'item-price', 'data-decimal' => true, :value => number_with_precision(f.object.estimated_total_price) }, :wrapper_html => { :class => "yui3-u-1-3" } %>

  <p class="yui3-u">
    <input type="button" class="button negative remove-item" value="Remover Item">
  </p>
</div>
