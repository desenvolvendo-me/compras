<table id="pledge_parcels" class="records">
  <thead>
    <tr>
      <th>
        Parcela
      </th>
      <th>
        Vencimento
      </th>
      <th>
        Valor inicial
      </th>
      <th>
        Valor liquidado
      </th>
      <th>
        Valor atual
      </th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <td>
        Totais
      </td>
      <td>
      </td>
      <td id="pledge_value">
        <%= f.object.decorator.pledge_value %>
      </td>
      <td id="pledge_liquidation_sum">
        <%= f.object.decorator.pledge_liquidation_value %>
      </td>
      <td id="pledge_balance">
        <%= f.object.decorator.pledge_balance %>
      </td>
    </tr>
  </tfoot>

  <tbody>
    <% if f.object.pledge %>
      <% localized(f.object.pledge.pledge_parcels).each do |parcel| %>
        <tr id="parcel_<%= parcel.number %>">
          <td>
            <%= parcel.number %>
          </td>
          <td>
            <%= parcel.expiration_date %>
          </td>
          <td class="value">
            <%= parcel.decorator.value %>
          </td>
          <td class="liquidations_value">
            <%= parcel.decorator.liquidations_value %>
          </td>
          <td class="balance">
            <%= parcel.decorator.balance_as_currency %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
