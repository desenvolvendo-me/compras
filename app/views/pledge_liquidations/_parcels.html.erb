<div class="yui3-g nested">
  <div class="yui3-u-1-4">
    <%= f.input :parcel_replicated_value, :disabled => true, :input_html => { :class => 'replicated_value' } %>
  </div>

  <div class="yui3-u-1-4">
    <%= f.input :parcels_sum, :disabled => true, :input_html => { :value => f.object.decorator.parcels_sum } %>
  </div>
</div>

<p>
  <input type="button" class="button affirmative add-parcel" value="Adicionar Parcela">
</p>

<div id="pledge-liquidation-parcels">
  <%= f.association :pledge_liquidation_parcels, :collection => localized(f.object.pledge_liquidation_parcels) do |e| %>
    <%= render 'pledge_liquidation_parcels/form', :f => e %>
  <% end %>
</div>

<%= mustache 'parcels-template' do %>
  <%= f.association :pledge_liquidation_parcels_attributes, :collection => f.object.pledge_liquidation_parcels.build, :index => '{{uuid_parcel}}' do |e| %>
    <%= render 'pledge_liquidation_parcels/form', :f => e %>
  <% end %>
<% end %>

<script>
  $("#parcels-template").nestedForm({
    add: '.add-parcel',
    remove: '.remove-parcel',
    target: '#pledge-liquidation-parcels',
    uuid: 'uuid_parcel',
    fieldsWrapper: '.parcel',
    inline: true
  });
</script>
