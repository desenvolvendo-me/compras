<%= f.input :description %>

<div class="yui3-g">
  <div class="yui3-u-1-6">
    <%= f.input :status, :disabled => f.object.new_record? %>
  </div>

  <div class="yui3-u-1-5">
    <%= f.input :deactivation_date %>
  </div>
</div>

<script>
  $('#precatory_type_status').change(function() {
    enableOrDisableDeactivationDate();
  });

  function enableOrDisableDeactivationDate() {
    boolean_status = ($('#precatory_type_status').val() == '<%= Status::INACTIVE %>');
    $('#precatory_type_deactivation_date').requiredField(boolean_status);
    $('#precatory_type_deactivation_date').attr('disabled', !boolean_status);
  }

  enableOrDisableDeactivationDate();
</script>
