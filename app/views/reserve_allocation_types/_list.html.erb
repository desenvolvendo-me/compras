<table class="records">
  <thead>
    <tr>
      <th>
        <%= resource_class.human_attribute_name :id %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :description %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :status %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :source %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% localized(collection) do |resource| %>
      <tr id="<%= dom_id resource %>">
        <td>
          <%= resource.id %>
        </td>
        <td>
          <%= link_to resource, edit_resource_path(resource) %>
        </td>
        <td>
          <%= resource.status %>
        </td>
        <td>
          <%= resource.source_humanize %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
