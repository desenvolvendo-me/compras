<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :entity %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :year %>
  </div>
</div>

<%= f.input :pledge, :modal_url => modal_pledges_path(:global_or_estimated => true) %>
<%= f.input :pledge_provider, :disabled => true %>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :emission_date, :disabled => true, :input_html => { :value => f.object.decorator.emission_date } %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :pledge_value, :disabled => true, :input_html => { :value => f.object.decorator.pledge_value } %>
  </div>
</div>

<%= f.input :number, :disabled => true %>
<%= f.input :provider %>

<%= f.input :date %>

<%= f.input :process_number %>
<%= f.input :description %>
