<div class="buttons">
  <%= f.button :submit if can?(:modify, main_controller_name) %>
  <%= f.button :back, :href => classification_trading_item_path(@trading_item) %>

  <% if f.object.persisted? && can?(:destroy, main_controller_name) %>
    <%= f.button :destroy, :href => bidder_disqualification_path(resource, :trading_item_id => @trading_item.id) %>
  <% end %>
</div>
