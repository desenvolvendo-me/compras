<div class="creditor-document">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :document_type %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :document_number %>
    </div>
  </div>

  <div class="yui3-g">
    <div class="yui3-u-1-6">
      <%= f.input :emission_date %>
    </div>

    <div class="yui3-u-1-6">
      <%= f.input :validity %>
    </div>

    <div class="yui3-u-1-3">
      <%= f.input :issuer %>
    </div>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-document" value="Remover Documento">
  </p>
</div>
