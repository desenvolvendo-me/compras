<tr class="record representative-person">
  <td>
    <%= name %>
  </td>
  <td>
    <%= identity_document %>
  </td>
  <td>
    <input id="people_record<%= id %>_id" class="person-id" type="hidden" name="<%= f.sanitized_object_name %>[representative_person_ids][]" value="<%= id %>" />
    <input id="people_record<%= id %>_name" class="person-name" type="hidden" value="<%= name %>" />
    <input id="people_record<%= id %>_identity_document" class="person-identity-document" type="hidden" value="<%= identity_document %>" />
    <button class="button negative modal-finder-remove">Remover</button>
  </td>
</tr>
