<table class="records">
  <thead>
    <tr>
      <th>
        <%= resource_class.human_attribute_name :id %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :name %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :code %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :materials_group %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :materials_class %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :material_characteristic %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :service_type %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :material_type %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% localized(collection) do |resource| %>
      <tr id="<%= dom_id resource %>">
        <td>
          <%= resource.id %>
        </td>
        <td>
          <%= link_to resource.name, edit_resource_path(resource) %>
        </td>
        <td>
          <%= resource.code %>
        </td>
        <td>
          <%= resource.materials_group %>
        </td>
        <td>
          <%= resource.materials_class %>
        </td>
        <td>
          <%= resource.material_characteristic_humanize %>
        </td>
        <td>
          <%= resource.service_type %>
        </td>
        <td>
          <%= resource.material_type_humanize %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
