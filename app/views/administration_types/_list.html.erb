<table class="records">
  <thead>
    <tr>
      <th>
        <%= resource_class.human_attribute_name :id %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :name %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :code %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :administration %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :organ_type %>
      </th>
      <th>
        <%= resource_class.human_attribute_name :legal_nature %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% localized(collection) do |resource| %>
      <tr id="<%= dom_id resource %>">
        <td>
          <%= resource.id %>
        </td>
        <td>
          <%= link_to resource.name, edit_resource_path(resource) %>
        </td>
        <td>
          <%= resource.code %>
        </td>
        <td>
          <%= resource.administration_humanize %>
        </td>
        <td>
          <%= resource.organ_type_humanize %>
        </td>
        <td>
          <%= resource.legal_nature %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
