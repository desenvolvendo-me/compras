<div class="yui3-g">
  <div class="yui3-u-1-3">
    <%= f.input :contract_number, :include_blank => true %>
  </div>
  <div class="yui3-u-1-3">
    <%= f.input :year, :include_blank => true %>
  </div>
  <div class="yui3-u-1-3">
    <%= f.input :creditor, as: :modal, data_url: modal_creditors_url,
                hidden_field: :creditor_id %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-3">
    <%= f.input :publication_date, :include_blank => true, as: :date %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :content, :include_blank => true %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :contract_value, :include_blank => true, :as => :fake, :input_html =>{ 'data-decimal' => true, :value => '0,00','data-precision' => 2, :maxlength => 15, :class => 'numeric' } %>
  </div>
</div>

<div class="yui3-g">

  <div class="yui3-u-1-3">
    <%= f.input :modality_humanize, :include_blank => true %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :start_date, :include_blank => true, as: :date %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :end_date, :include_blank => true, as: :date %>
  </div>
  <div class="yui3-u-1-3">
    <%= f.input :status %>
  </div>
</div>

<script>
$(function () {
    $('#contract_report_year').bind('keyup paste', function(){
        this.value = this.value.replace(/[^0-9]/g, '');
    });
    $('#contract_report_year').attr('maxlength',4);
});
</script>
