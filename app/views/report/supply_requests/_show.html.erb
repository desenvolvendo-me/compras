<div>
  <table style="border: none;" class="records">
    <thead>
    <tr style="text-align: center;border: none;">
      <td><h1><b> PEDIDO DE FORNECIMENTO - NÚMERO <%= resource.number %> </b></h1></td>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div style="text-align: justify">
  <span>
    <p>
      <b> DEPARTAMENTO: </b> <%= resource.department %>
    </p>
  </span>
</div>
<div style="text-align: justify">
  <span>
    <p>
      <b> LOCAL SOLICITANTE: </b> <%= resource.requesting_department %>
    </p>
  </span>
</div>
<div style="text-align: justify">
  <span>
    <p>
      <b> SOLICITANTE: </b> <%= resource.department_person %>
    </p>
  </span>
</div>
<div style="text-align: justify">
  <span>
    <p>
      <b> CERTAME: </b>  <%= resource.licitation_process %>
    </p>
  </span>
</div>
<div style="text-align: justify">
  <span>
    <p>
      <b> PROCESSO: </b>  <%= "#{resource.licitation_process.process}/#{resource.licitation_process.year}" unless resource.licitation_process.nil? %>
    </p>
  </span>
</div>
<div style="text-align: justify">
  <span>
    <p>
      <b> OBJETO: </b> <%= resource.licitation_process.description unless resource.licitation_process.nil? %>
    </p>
  </span>
</div>

<br>
<br>
<br>
<p>
<h2><b> ITENS DA PEDIDO DE FORNECIMENTO </b></h2>
<div>
  <table class="records">
    <thead>
      <tr>
        <th>ITEM</th>
        <th>QUANTIDADE</th>
      </tr>
    </thead>
    <tbody>
    <% resource.supply_request.items.each do |item| %>
      <tr>
        <td><%= item.material %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</p>


<div >
  <span>
    <p>
      <b> <h2> <%= resource.prefecture.titleize() %>, <%= l(Date.today, format: :long) %> </h2> </b>
    </p>
  </span>
</div>
<br><br><br><br><br><br>
<div class="signature" style="text-align: center">
  <p>
  <hr>
  FUNCIONÁRIO <br><br><br><br><br><br>
</div>

<%if @report.approv === 'true' %>
  <p class="right">
    <%= link_to "Aprovar", supply_request_attendances_path(supply_request_attendance:{responsible_id:@report.current_user_id, date:Date.today.to_s ,supply_request_id:@report.supply_request_id,service_status: 'new',justification:'Por favor analisar',responsible_id:current_user.authenticable.id},secretary_id: @report.secretary_id),:method=>:post, :class => "button primary" %>
    <%= link_to I18n.t("enumerations.supply_request_service_status.order_in_financial_analysis"), supply_request_attendances_path(supply_request_attendance:{responsible_id:@report.current_user_id , date:Date.today.to_s ,supply_request_id:@report.supply_request_id, service_status: 'order_in_financial_analysis',justification:'Por favor analisar',responsible_id:current_user.authenticable.id},secretary_id: @report.secretary_id),:method=>:post, :class => 'button primary' %>
  </p>
<% end %>

<script>
    console.log("Running");
    var css = '@page { size: portrait; }',
        head = document.head,
        style = document.createElement('style');

    style.type = 'text/css';
    style.media = 'print';
    style.appendChild(document.createTextNode(css));

    head.appendChild(style);

    <% if @report.approv === 'true' %>
      window.onload = function(){
        var footer = document.getElementById('footer');
        footer.style.display = "none";
      };
    <% end %>
</script>

