<div>
  <table class="records">
    <thead>
    <tr>
      <th>DESCRIÇÃO</th>
      <th>CLASSE</th>
      <th>TIPO</th>
      <th>MEDICAMENTO</th>
      <th>COMBUSTÍVEL</th>
      <th>SITUAÇÃO</th>
    </tr>
    </thead>
    <tbody>
    <% @material.each do |material| %>
      <tr>
        <td><%= material.description %></td>
        <td><%= material.material_class %></td>
        <td><%= Material.human_attribute_name(material.material_classification) %></td>
        <td><%= material.combustible ? 'Sim':'Não' %></td>
        <td><%= material.medicine ? 'Sim':'Não' %></td>
        <td><%= material.active ? 'Ativo':'Inativo' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>