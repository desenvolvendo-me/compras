<% report.records.group_by { |r| report.group_by_licitation r }.each do |licitation_process, items| %>
  <div class="field-without-label">
    <table class="records">
      <thead>
        <th>Processo de compra</th>
      </thead>

      <tbody>
        <tr>
          <td><%= licitation_process %></td>
        </tr>
      </tbody>
    </table>

    <table class="records">
      <thead>
        <th>Fornecedor</th>
      </thead>

      <tbody>
        <% items.group_by { |i| report.send :group_by_creditor, i }.each do |creditor, items| %>
          <tr>
            <td><%= creditor %></td>
          </tr>
      </tbody>
    </table>

    <table class="records">
      <thead>
        <th>Item</th>
        <th>Valor Unit√°rio</th>
      </thead>

      <tbody>
        <% items.each do |item| %>
          <tr>
            <td><%= item.material %></td>
            <td><%= number_to_currency item.unit_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
<% end %>
