<div class="yui3-g">

  <div class="yui3-u-1-3">
    <%= f.input :emission_date, :include_blank => true, as: :date %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :purchase_process, as: :auto_complete, required: true,
                hidden_field: :purchase_process_id,
                source_path: licitation_processes_path() %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :modality %>
  </div>

</div>

<div class="yui3-g">

  <div class="yui3-u-1-3">
    <%= f.input :contract, as: :modal, data_url: modal_contracts_url,
                hidden_field: :contract_id, :include_blank => true %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :year %>
  </div>

</div>

<script>
    $(function () {
        $('#new_pledge_request_report')[0].reset();

        $('#pledge_request_report_year').bind('keyup paste', function(){
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        $('#pledge_request_report_year').attr('maxlength',4);
    });
</script>