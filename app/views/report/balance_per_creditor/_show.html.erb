<%
  def date_mask(d)
    return d.strftime("%d/%m/%Y") unless d.nil?
  end
%>

<div>
  <table class="records">
    <thead>
    <tr style="text-align: center;">
      <td> RELATÃ“RIO DE SALDO POR FORNECEDOR</td>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div style="text-align: justify">

</div>

<br>

<% @creditors.uniq.each do |creditor| %>
  <div style="text-align: justify">
  <span>
    <p>
      <b> FORNECEDOR: </b> <%= creditor.to_s %>
    </p>
  </span>
  </div>
  <% total_c_l = 0 %>
  <% total_c_f = 0 %>
  <% Report::BalancePerCreditorHelper.get_contracts(creditor, @licitation_process, @department).each do |contract| %>
    <div style="text-align: justify">
  <span>
    <p>
      <b> PROCESSO: </b> <%= contract.licitation_process.to_s %>
      <b> CONTRATO: </b> <%= contract.to_s %>
      <b> PRAZO DE VALIDADE: </b> <%= l(contract.end_date, format: :long) %>
    </p>
  </span>
    </div>
    <p>
    <div>
      <table class="records">
        <thead>
        <tr>
          <th>MATERIAL</th>
          <th>QUANTIDADE LICITADA</th>
          <th>QUANTIDADE FORNECIDA</th>
          <th>SALDO</th>
        </tr>
        </thead>
        <tbody>
        <% total_i_l = 0 %>
        <% total_i_f = 0 %>
        <% contract.licitation_process.items.each do |item| %>
          <% balance = Report::BalanceHelper.get_balance(contract, item) %>
          <% total_i_l += item.quantity %>
          <% total_i_f += balance["total"] %>
          <% total_c_l += item.quantity %>
          <% total_c_f += balance["total"] %>
          <tr>
            <td><%= item.material %></td>
            <td><%= item.quantity %></td>
            <td><%= balance["total"] %></td>
            <td><%= balance["balance"] %></td>
          </tr>
        <% end %>
        </tbody>
        <td colspan="1"></td>
        <td><h2><b>Total Licitado: <%= total_i_l %></b></h2></td>
        <td><h2><b>Total Fornecido: <%= total_i_f %></b></h2></td>
        <td colspan="1"></td>
      </table>
    </div>
    </p>
  <% end %>
  <span>
    <p>
      <b> TOTAL LICITADO: </b> <%= total_c_l %>
      <b> TOTAL FORNECIDO: </b> <%= total_c_f %>
    </p>
  </span>
  <br>
  <br>
  <br>
<% end %>