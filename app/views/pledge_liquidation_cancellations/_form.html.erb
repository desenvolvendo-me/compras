<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :entity %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :year %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-3">
    <%= f.input :pledge %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :emission_date, :disabled => true, :input_html => { :value => f.object.decorator.emission_date } %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :pledge_value, :disabled => true, :input_html => { :value => f.object.decorator.pledge_value } %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-3">
    <p>
      <%= f.input :pledge_parcel %>
      <%= link_to_modal_info 'pledge_liquidation_cancellation_pledge_parcel', f.object.pledge_parcel %>
    </p>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :expiration_date, :disabled => true, :input_html => { :value => f.object.decorator.expiration_date } %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :balance, :disabled => true, :input_html => { :value => f.object.decorator.balance } %>
  </div>
</div>

<%= f.input :kind %>
<%= f.input :value, :disabled => f.object.total? %>
<%= f.input :date %>
<%= f.input :reason %>

<script>
  <% if f.object.persisted? %>
    $('form.pledge_liquidation_cancellation :input').attr('disabled', true);
  <% else %>
    (function() {
      var pledge_id = $('#pledge_liquidation_cancellation_pledge_id').val(),
          pledge_parcel_value;

      function pledgeExpirationUrl() {
        var url = "<%= modal_pledge_parcels_path %>?",
            params = {
              locked_fields: ["pledge"],
              pledge_parcel: {
                pledge_id: $('#pledge_liquidation_cancellation_pledge_id').val(),
                pledge: $('#pledge_liquidation_cancellation_pledge').val()
              }
            };

        url += jQuery.param(params);

        return url;
      }

      function forceValueWhenTotalIsKind(){
        if($('#pledge_liquidation_cancellation_kind').val() == '<%= PledgeCancellationKind::TOTAL %>') {
          $('#pledge_liquidation_cancellation_value').attr('disabled', true);
          $('#pledge_liquidation_cancellation_value').val(pledge_parcel_value);
        } else {
          $('#pledge_liquidation_cancellation_value').attr('disabled', false);
        }
      }

      $('#pledge_liquidation_cancellation_pledge_id').change(function (event, pledge) {
        if (pledge) {
          $('#pledge_liquidation_cancellation_emission_date').val(pledge.emission_date);
          $('#pledge_liquidation_cancellation_pledge_value').val(pledge.pledge_value);
          if (pledge_id != pledge.id) {
            $('#pledge_liquidation_cancellation_pledge_parcel').attr('data-modal-url', pledgeExpirationUrl());
            $('#pledge_liquidation_cancellation_expiration_date').val('');
            $('#pledge_liquidation_cancellation_pledge_parcel_id').val('');
            $('#pledge_liquidation_cancellation_pledge_parcel_value').val('');
          }
        } else {
          $('#pledge_liquidation_cancellation_pledge_parcel').attr('data-modal-url', '<%= modal_pledge_parcels_path %>');
          $('#pledge_liquidation_cancellation_emission_date').val('');
          $('#pledge_liquidation_cancellation_pledge_value').val('');
          $('#pledge_liquidation_cancellation_pledge_parcel').val('');
          $('#pledge_liquidation_cancellation_expiration_date').val('');
          $('#pledge_liquidation_cancellation_balance').val('');
        }
      });

      $('#pledge_liquidation_cancellation_pledge_parcel_id').change(function (event, pledge_parcel) {
        if (pledge_parcel) {
          $('#pledge_liquidation_cancellation_expiration_date').val(pledge_parcel.expiration_date);
          $('#pledge_liquidation_cancellation_balance').val(pledge_parcel.balance);
          if (!$('#pledge_liquidation_cancellation_pledge_id').val()) {
            $('#pledge_liquidation_cancellation_pledge_id').val(pledge_parcel.pledge_id);
            $('#pledge_liquidation_cancellation_pledge').val(pledge_parcel.pledge);
            $('#pledge_liquidation_cancellation_pledge_value').val(pledge_parcel.pledge_value);
            $('#pledge_liquidation_cancellation_emission_date').val(pledge_parcel.emission_date);
          }
          pledge_id = pledge_parcel.pledge_id;
          pledge_parcel_value = pledge_parcel.pledge_expiration_value;
          forceValueWhenTotalIsKind();
        } else {
          $('#pledge_liquidation_cancellation_expiration_date, #pledge_liquidation_cancellation_balance').val('');
          pledge_parcel_value = null;
        }
      });

      $('#pledge_liquidation_cancellation_kind').change(forceValueWhenTotalIsKind);
    })();
  <% end %>
</script>
