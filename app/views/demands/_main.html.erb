<div class="yui3-g">
  <div class="yui3-u-1-3">
    <%= f.input :year %>
  </div>

  <div class="yui3-u-1-3">
    <%= f.input :name %>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :status, :disabled => true %>
  </div>

</div>

<%= f.input :observation %>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :initial_date %>
  </div>
  <div class="yui3-u-1-2">
    <%= f.input :final_date %>
  </div>
</div>

<div class="yui3-g">
  <div class="yui3-u-1-2">
    <%= f.input :purchasing_unit, :as => :modal,:hidden_field => false,
                :modal_url =>
                    modal_purchasing_units_path(:by_situation => 'active')%>
  </div>

  <div class="yui3-u-1-2">
    <%= f.input :purchase_solicitation,
                modal_url: modal_purchase_solicitations_path(by_model_request:true) %>
  </div>
</div>