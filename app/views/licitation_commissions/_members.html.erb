<%= f.error :licitation_commission_members %>

<p>
  <input type="button" class="button affirmative add-member" value="Adicionar Membro">
</p>

<div id="licitation-commission-members">
  <%= f.association :licitation_commission_members, :collection => localized(f.object.licitation_commission_members) do |p| %>
    <%= render 'licitation_commission_members/form', :f => p %>
  <% end %>
</div>

<%= mustache 'member-template' do %>
  <%= f.association :licitation_commission_members_attributes, :collection => f.object.licitation_commission_members.build, :index => '{{uuid_member}}' do |p| %>
    <%= render 'licitation_commission_members/form', :f => p %>
  <% end %>
<% end %>

<script>
  $("#member-template").nestedForm({
    add: '.add-member',
    remove: '.remove-member',
    target: '#licitation-commission-members',
    uuid: 'uuid_member',
    fieldToRemove: '.member',
    appendItem: false
  });
</script>
