<%= f.input :code %>

<div class="yui3-g">
  <div class="yui3-u-4-5">
    <%= f.input :regulatory_act, :modal_info => true %>
  </div>

  <div class="yui3-u-1-5">
    <%= f.input :regulatory_act_vigor_date, :disabled => true, :input_html => { :value => (l(f.object.regulatory_act_vigor_date) if f.object.regulatory_act_vigor_date) } %>
  </div>
</div>

<%= f.input :description %>

<script>
  $("#function_regulatory_act_id").change(function (event, regulatoryAct) {
    if (regulatoryAct) {
      $('#function_regulatory_act_vigor_date').val(regulatoryAct.vigor_date);
    } else {
      $('#function_regulatory_act_vigor_date').val('');
    }
  });
</script>
