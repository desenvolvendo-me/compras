<%= f.input :code %>
<%= f.input :regulatory_act %>
<%= link_to_modal_info 'function_regulatory_act', f.object.regulatory_act %>
<%= f.input :regulatory_act_vigor_date, :disabled => true, :input_html => { :value => (l(f.object.regulatory_act_vigor_date) if f.object.regulatory_act_vigor_date) } %>
<%= f.input :description %>

<script>
  $("#function_regulatory_act_id").change(function (event, regulatory_act) {
    if (regulatory_act) {
      $('#function_regulatory_act_vigor_date').val(regulatory_act.vigor_date);
    } else {
      $('#function_regulatory_act_vigor_date').val('');
    }
  });
</script>
