<div class="buttons">
  <% if f.object.waiting? %>
    <%= f.button :submit if can?(:modify, main_controller_name) %>

    <% if f.object.persisted? && can?(:destroy, main_controller_name) %>
      <%= f.button :submit, 'Anular', :class => 'negative' %>
    <% end %>
  <% end %>

  <%= release_button %>
  <%= build_licitation_process_link %>
  <%= link_to("Solicitação de abertura de processo licitatório",
              resource_path(resource),
              :class => 'clear button neutral',
              'data-disabled' => f.object.decorator.not_released_message) if f.object.persisted? %>
  <%= f.button :back %>
</div>
