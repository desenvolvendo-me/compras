<div class="yui3-g item nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <p class="yui3-u">Item <span class='item-label'></span></p>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :material, :input_html => { :class => 'material' }, :disabled => f.object.annulled? %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :brand, :disabled => f.object.annulled? %>
    </div>

    <div class="yui3-u-1-12">
      <%= f.input :reference_unit, :disabled => true, :input_html => { :class => 'reference-unit' } %>
    </div>

    <div class="yui3-u-1-8">
      <%= f.input :quantity, :disabled => f.object.annulled? %>
    </div>
  </div>
  <% unless f.object.annulled? %>
    <p class="yui3-u">
      <input type="button" class="button negative remove-item" value="Remover Item">
    </p>
  <% end %>
</div>
