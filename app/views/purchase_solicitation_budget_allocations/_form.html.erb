<div class="purchase-solicitation-budget-allocation nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :budget_allocation, :input_html => { :class => 'budget-allocation' }, :disabled => f.object.annulled? %>
    </div>

    <div class="yui3-u-1-2">
      <%= f.input :expense_nature, :disabled => f.object.annulled? %>
    </div>
  </div>

  <%= f.error :items %>

  <p>
    <input type="button" class="button affirmative add-item-<%= f.nested_identifier %>"<%= data_disabled_attribute(data_disabled) %> value="Adicionar Item">
  </p>

  <div id="items-<%= f.nested_identifier %>">
    <%= f.association :items, :collection => localized(f.object.items) do |p| %>
      <%= render 'purchase_solicitation_budget_allocation_items/form', :f => p, :data_disabled => data_disabled %>
    <% end %>
  </div>

  <%= mustache "items-template-#{f.nested_identifier}" do %>
    <%= f.association :items_attributes, :collection => f.object.items.build, :index => '{{uuid_item}}' do |item| %>
      <%= render 'purchase_solicitation_budget_allocation_items/form', :f => item, :data_disabled => nil %>
    <% end %>
  <% end %>


  <div class="yui3-g">
    <p class="yui3-u">
      <input type="button" class="button negative remove-purchase-solicitation-budget-allocation"<%= data_disabled_attribute(data_disabled) %> value="Remover Dotação">
    </p>
  </div>
</div>

<script>
  $("#items-template-<%= f.nested_identifier %>").nestedForm({
    add: ".add-item-<%= f.nested_identifier %>",
    remove: ".remove-item",
    target: "#items-<%= f.nested_identifier %>",
    fieldsWrapper: '.item',
    uuid: "uuid_item",
    appendItem: true
  });
</script>
