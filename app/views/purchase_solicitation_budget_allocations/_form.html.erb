<fieldset class="purchase-solicitation-budget-allocation nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-4">
      <%= f.input :budget_allocation_id,:disabled => true, :required => false, :input_html => { :id => "",  :size => 2 } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :budget_allocation, :input_html => { :size => 10, :class => 'budget-allocation' } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :expense_economic_classification, :input_html => { :size => 21 } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :estimated_value, :input_html => { :class => 'allocation-price', :size => 9 } %>
    </div>
  </div>

  <%= f.error :items %>

  <div id="items-<%= f.nested_identifier %>">
    <%= f.association :items, :collection => localized(f.object.items) do |p| %>
      <%= render 'purchase_solicitation_budget_allocation_items/form', :f => p %>
    <% end %>
  </div>

  <%= mustache "items-template-#{f.nested_identifier}" do %>
    <%= f.association :items_attributes, :collection => f.object.items.build, :index => '{{uuid_item}}' do |item| %>
      <%= render 'purchase_solicitation_budget_allocation_items/form', :f => item %>
    <% end %>
  <% end %>

  <div class="nested-remove">
    <input type="button" class="button affirmative add-item-<%= f.nested_identifier %>" value="Adicionar Item">
  </div>

  <div class="yui3-u-1-5 nested-remove">
    <input type="button" class="button negative remove-purchase-solicitation-budget-allocation" value="Remover Dotação">
  </div>
</fieldset>

<script>
  $("#items-template-<%= f.nested_identifier %>").nestedForm({
    add: ".add-item-<%= f.nested_identifier %>",
    remove: ".remove-item",
    target: "#items-<%= f.nested_identifier %>",
    fieldToRemove: '.item',
    uuid: "uuid_item"
  });
</script>
