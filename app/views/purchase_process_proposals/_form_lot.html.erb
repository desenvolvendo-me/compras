<div class="lots add-margin-bottom">
  <div class="yui3-g">
    <%= f.input :lot, as: :hidden %>

    <div class="yui3-u-1-8">
      <%= f.input :item_lot, disabled: true, fake: true, input_html: { value: f.object.lot } %>
    </div>

    <div class="yui3-u-1-3 total_price">
      <%= f.input :unit_price, required: true,
        input_html: { value: f.object.decorator.unit_price, 'data-decimal' => true } %>
    </div>
  </div>
</div>
