<div id="record">
  <table class="records">
    <thead>
      <tr>
        <th>
          <%= resource_class.human_attribute_name :name %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :phone %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :fax %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :mobile %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :email %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :address %>
        </th>
        <th>
          <%= resource_class.human_attribute_name :correspondence_address %>
        </th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <%= resource.name %>
        </td>
        <td>
          <%= resource.phone %>
        </td>
        <td>
          <%= resource.fax %>
        </td>
        <td>
          <%= resource.mobile %>
        </td>
        <td>
          <%= resource.email %>
        </td>
        <td>
          <%= resource.address %>
        </td>
        <td>
          <%= resource.correspondence_address %>
        </td>
      </tr>
    </tbody>
  </table>

  <% if resource.individual? %>
    <table class="records">
      <thead>
        <tr>
          <th>
            <%= Individual.human_attribute_name :cpf %>
          </th>
          <th>
            <%= Individual.human_attribute_name :gender %>
          </th>
          <th>
            <%= Individual.human_attribute_name :mother %>
          </th>
          <th>
            <%= Individual.human_attribute_name :father %>
          </th>
          <th>
            <%= Individual.human_attribute_name :birthdate %>
          </th>
          <th>
            <%= Individual.human_attribute_name :identity %>
          </th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= resource.personable.cpf %>
          </td>
          <td>
            <%= resource.personable.gender_humanize %>
          </td>
          <td>
            <%= resource.personable.mother %>
          </td>
          <td>
            <%= resource.personable.father %>
          </td>
          <td>
            <%= I18n.l(resource.personable.birthdate) if resource.personable.birthdate %>
          </td>
          <td>
            <%= resource.personable.identity %>
          </td>
        </tr>
      </tbody>
    </table>

  <% elsif resource.company? %>
    <table class="records">
      <thead>
        <tr>
          <th>
            <%= Company.human_attribute_name :cnpj %>
          </th>
          <th>
            <%= Company.human_attribute_name :state_registration %>
          </th>
          <th>
            <%= Company.human_attribute_name :commercial_registration_number %>
          </th>
          <th>
            <%= Company.human_attribute_name :commercial_registration_date %>
          </th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= resource.personable.cnpj %>
          </td>
          <td>
            <%= resource.personable.state_registration %>
          </td>
          <td>
            <%= resource.personable.commercial_registration_number %>
          </td>
          <td>
            <%= I18n.l(resource.personable.commercial_registration_date) if resource.personable.commercial_registration_date %>
          </td>
        </tr>
      </tbody>
    </table>

    <table class="records">
      <thead>
        <tr>
          <th>
            <%= Company.human_attribute_name :responsible_role %>
          </th>
          <th>
            <%= Company.human_attribute_name :choose_simple %>
          </th>
          <th>
            <%= Company.human_attribute_name :legal_nature %>
          </th>
          <th>
            <%= Company.human_attribute_name :responsible %>
          </th>
          <th>
            <%= Company.human_attribute_name :company_size %>
          </th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= resource.personable.responsible_role %>
          </td>
          <td>
            <%= I18n.t(resource.personable.choose_simple.to_s) %>
          </td>
          <td>
            <%= resource.personable.legal_nature %>
          </td>
          <td>
            <%= resource.personable.responsible %>
          </td>
          <td>
            <%= resource.personable.company_size %>
          </td>
        </tr>
      </tbody>
    </table>

    <table class='records'>
      <thead>
        <tr>
          <th>SÃ³cios</th>
        </tr>
      </thead>
      <tbody>
        <% resource.personable.partners.each do |partner| %>
          <tr>
            <td>
              <%= partner %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
