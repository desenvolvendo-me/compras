<tr>
  <td class="item" data-id="<%= item.id %>">
    <% if index == 0 %>
      <input class="item_chooser" type="radio" value="true" name="item_chooser" checked="checked">
    <% else %>
      <input class="item_chooser" type="radio" value="true" name="item_chooser">
    <% end %>
  </td>

  <td class="lot text-center" style="display: grid;">
    <%= item.lot %>
    <%= link_to_lot trading, item  %>
  </td>
  <td><%= item.decorator.lowest_proposal_amount %></td>
  <td><%= item.decorator.lowest_proposal_creditor %></td>
  <td class="bid_amount"><%= item.decorator.lowest_bid_amount %></td>
  <td class="bid_creditor"><%= item.decorator.lowest_bid_creditor %></td>
  <td class="status"><%= item.status_humanize %></td>
</tr>
