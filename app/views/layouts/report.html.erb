<!DOCTYPE html>
<html>
  <head>
    <meta name="robots" content="noindex,nofollow">
    <meta charset="utf-8">
    <%= csrf_meta_tag %>

    <title>icompras</title>

    <%= stylesheet_link_tag 'report', :media => :all %>
    <%= stylesheet_link_tag 'compras/report', :media => :all %>
    <%= stylesheet_link_tag 'compras/table_size', :media => :all %>
    <%= stylesheet_link_tag 'buttons', :media => :all  if @report&.approv === 'true'%>
    <%= javascript_include_tag "application"  if @report&.approv === 'true'%>

    <link rel="shortcut icon" type="image/png" href="<%= image_path 'favicon.png' %>" />
  </head>

  <body>
    <div id="container">
      <% if current_prefecture %>
        <div id="header">
          <p><%= prefecture_image %></p>

          <h2><%= current_prefecture.name %> | CNPJ: <%= current_prefecture.cnpj %></h2>
          <h3>E-mail: <%= current_prefecture.email %> | Telefone: <%= current_prefecture.phone %> | Fax: <%= current_prefecture.fax %></h3>
        </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>

      <div id="footer">
        <p class="right">
          <%= back_link %> ou <%= print_link %>
        </p>
      </div>
    </div>
  </body>
</html>
