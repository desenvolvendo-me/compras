<div class="buttons">
  <%= annul_link(:data_disabled => f.object.decorator.not_annullable_message, label_for_new: 'Não Tenho Necessidade') %>

  <% if can?(:modify, main_controller_name) %>
    <%= f.button :submit, 'data-disabled' => f.object.decorator.not_editable_message %>
  <% end %>

  <% if f.object.persisted? %>
    <%= link_to 'Liberações', purchase_solicitation_liberations_path(:purchase_solicitation_id => resource.id), 'data-disabled' => f.object.decorator.not_persisted_message,  :class => 'button primary' %>
    <%= link_to 'Imprimir Lista', report_purchase_solicitation_item_path(:purchase_solicitation_item_report => {purchase_solicitation_id: f.object.id}), :class => 'button primary' %>
  <% end %>
  <%= f.button :back %>
</div>
