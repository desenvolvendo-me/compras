<% if record.presenter? %>
<tr <%= record.presenter.data_attributes.map{|a| "data-#{a.first}='#{record.send(a.last)}'"}.join(" ") %>>
<% else %>
<tr data-value="<%= record.id %>" data-label="<%= record %>" data-type="<%= record.class.to_s %>">
<% end %>
  <% attributes.each do |attribute| %>
    <td><%= formatted_attribute record, attribute %></td>
  <% end %>
</tr>
