<div class="nested-administrative-process-budget-allocation contrasted">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <%= f.input :budget_allocation, :as => :auto_complete, :source_path => budget_allocations_path %>

  <div class="yui3-g">
    <div class="yui3-u-1-4">
      <%= f.input :budget_allocation_expense_nature, :disabled => true %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :budget_allocation_amount, :disabled => true, :input_html => { :value => number_with_precision(f.object.budget_allocation_amount) } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :value, :input_html => { :class => 'allocation-value' } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :total_items_value, :disabled => true, :input_html => { :class => 'total-value', :value => f.object.decorator.total_items_value } %>
    </div>
  </div>

  <input type="button" class="button affirmative add-item-<%= f.nested_identifier %> add-items"<%= data_disabled_attribute(data_disabled) %> value="Adicionar Item">

  <div id="items-<%= f.nested_identifier %>">
    <%= f.association :items, :collection => localized(f.object.items) do |p| %>
      <%= render 'administrative_process_budget_allocation_items/form', :f => p, :data_disabled => data_disabled %>
    <% end %>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-administrative-process-budget-allocation" value="Remover Dotação">
  </p>

  <%= mustache "items-template-#{f.nested_identifier}" do %>
    <%= f.association :items_attributes, :collection => f.object.items.build, :index => '{{uuid_item}}' do |item| %>
      <%= render 'administrative_process_budget_allocation_items/form', :f => item, :data_disabled => nil %>
    <% end %>
  <% end %>
</div>

<script>
  $("#items-template-<%= f.nested_identifier %>").nestedForm({
    add: ".add-item-<%= f.nested_identifier %>",
    remove: ".remove-item",
    target: "#items-<%= f.nested_identifier %>",
    fieldsWrapper: '.item',
    uuid: "uuid_item",
    appendItem: false
  });
</script>
