<div class="administrative-process-budget-allocation nested">
  <%= f.input :id, :as => 'hidden' %>
  <%= f.input :_destroy, :as => 'hidden', :input_html => { :class => 'destroy' } %>

  <div class="yui3-g">
    <div class="yui3-u-1-2">
      <%= f.input :budget_allocation, :input_html => { :class => "budget-allocation" } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :budget_allocation_amount, :disabled => true, :input_html => { :class => 'amount', :value => number_with_precision(f.object.budget_allocation_amount) } %>
    </div>

    <div class="yui3-u-1-4">
      <%= f.input :value, :input_html => { :class => 'allocation-value' } %>
    </div>
  </div>

  <p class="yui3-u">
    <input type="button" class="button negative remove-administrative-process-budget-allocation" value="Remover Dotação">
  </p>
</div>
