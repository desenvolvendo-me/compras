html {
  background: #bbc7d8 url(<%= image_path 'sidebar.png' %>) repeat-y;
}

#sidebar {
  background: #DCE3F0;
  border-right: 1px solid #B4BBC5;
  position: absolute;
  width: 230px;
}

#sidebar .title {
  background: #E2E9F2;
  background: -o-linear-gradient(#e2e9f2, #cad0d8);
  background: -moz-linear-gradient(#e2e9f2, #cad0d8);
  background: -webkit-linear-gradient(#e2e9f2, #cad0d8);
  border-bottom: 1px solid #B4BBC5;
  color: #333;
  font-size: 85%;
  line-height: 25px;
  margin: 0 0 1em;
  padding-left: 5px;
  text-transform: uppercase;
  text-shadow: 0px 1px 1px #FFF;
}

#sidebar .menu {
  margin: 0 0 1em;
}

#sidebar .menu ul {
  margin: 0;
}

#sidebar .menu li {
  display: block;
}

#sidebar .menu a {
  color: #666;
  display: block;
  line-height: 29px;
  padding-left: 10px;
  text-decoration: none;
}

#sidebar .menu a:hover {
  color: #000;
}
