#menu {
  background: #356598;
  background: -moz-linear-gradient(#356598, #4D79A5);
  background: -webkit-linear-gradient(#356598, #4D79A5);
  line-height: 2;
  padding: 0 0.5em;
}

/* first level */
#menu ul {
  margin: 0;
}

#menu li {
  border-right: solid 1px #7292B3;
  display: inline-block;
  margin-top: 0.45em;
  position: relative;
}

#menu li:last-child {
  border-right: 0;
}

#menu a {
  color: #FFF;
  display: block;
  font-size: 123.1%;
  margin-right: 0.25em;
  padding: 0 0.5em;
  text-decoration: none;
}

#menu img {
  vertical-align: middle;
}

#menu li:active > a, #menu li:hover > a {
  background: url(<%= image_path 'menu-active-left.gif' %>) left top no-repeat,
              url(<%= image_path 'menu-active-right.gif' %>) right top no-repeat,
              #FFF;
  color: #37638E;
}

#menu li:active > ul, #menu li:hover > ul {
  display: block;
}

/* second level */
#menu ul ul {
  background: #FEFEFF;
  border-bottom: solid 1px #DBE9ED;
  border-left: solid 1px #DBE9ED;
  border-right: solid 1px #DBE9ED;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: none;
  min-width: 100%;
  padding: 0.5em 0.5em 0;
  position: absolute;
  z-index: 1000;
  white-space: nowrap;
}

#menu li li {
  border-bottom: solid 1px #D7E7F5;
  border-right: 0;
  display: block;
  margin-bottom: 0.5em;
  margin-top: 0;
}

#menu li li:last-child {
  border-bottom: 0;
  margin-bottom: 0;
}

#menu li li > a {
  background: transparent;
  color: #37638E;
  font-size: 108%;
  margin-right: 0;
}

#menu li li:active > a, #menu li li:hover > a {
  background: #FEFFE1;
  background: -moz-linear-gradient(#FDFEF6, #FEFFE1);
  background: -webkit-linear-gradient(#FDFEF6, #FEFFE1);
}

/* third level */
#menu ul ul ul {
  border-top: solid 1px #DBE9ED;
  left: 100%;
  top: -0.6em;
}
