#content {
  background: #FFF;
  box-shadow: 0px 0px 3px #79808B;
  margin-left: 231px;
  padding: 37px 10px 10px;
  position: relative;
}

#content .nested-remove {
  padding-top: 30px;
}

#content .title {
  background: url(<%= image_path 'tick.png' %>) 25px bottom no-repeat;
  font-size: 123.1%;
  margin: 0;
  padding: 15px 15px 26px;
  position: relative;
}

#content .actions {
  margin-bottom: 1em;
}

#content .actions ul {
  margin: 0;
}

#content .actions li {
  display: inline-block;
  list-style: none;
  margin-right: 1em;
}

#content.new, #content.create, #content.edit, #content.update {
  padding: 25px 0 0;
}

#content.new .notice, #content.create .notice, #content.edit .notice, #content.update .notice, #content.new .alert, #content.create .alert, #content.edit .alert, #content.update .alert {
  margin: 1em 1em 0;
}

#content.new .simple_form, #content.create .simple_form, #content.edit .simple_form, #content.update .simple_form {
  background: #F6F6F6;
  box-shadow: inset 0 1px 3px #EAEAEA;
  padding: 20px 15px 15px;
  margin-top: -12px;
}

#content .property-field-values .yui3-u {
  margin-right: 1em;
}

#content .multiple-nested {
  background-color: #ddd;
}

#content .contrasted {
  border: 1px solid #aaa;
  padding: 12px;
  background-color: #fff;
  border-radius: 5px;
}
