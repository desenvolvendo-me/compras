#content.bookmarks.empty {
  background: none;
  box-shadow: none;
}

#content.bookmarks.empty .box {
  background: #A1AFC4 url(<%= image_path "pin.png" %>) 15px 20px no-repeat;
  border-radius: 10px;
  border: 1px solid #9AA4B2;
  margin: 10em auto;
  padding: 20px 20px 20px 55px;
  width: 350px;
}

#content.bookmarks.empty p {
  margin-bottom: 1.5em;
}

#content.bookmarks.empty .message {
  color: #FFF;
  text-shadow: 0 1px 1px #6E7B8E;
}

#content.bookmarks.empty .buttons {
  text-align: center;
  margin: 0;
}

#content.bookmarks.empty .button {
  border-color: #969696;
  border-radius: 3px;
  font-size: 93%;
}
