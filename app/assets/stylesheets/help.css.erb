.help {
  background: #FDF5D6;
  border: 1px solid #FFDC66;
  border-radius: 5px;
  color: #3F4061;
  margin: 0 0 1em;
  padding: 1em 1em 0;
  position: relative;
}

.help .close {
  background: url(<%= image_path 'close.png' %>) right center no-repeat;
  height: 10px;
  position: absolute;
  overflow: hidden;
  right: 5px;
  text-indent: 10px;
  top: 5px;
  width: 10px;
}
