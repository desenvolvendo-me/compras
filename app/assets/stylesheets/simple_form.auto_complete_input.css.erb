.ui-autocomplete {
  position: absolute;
  top: 0;
  left: 0;
  cursor: default;
  z-index: 1003;
}

.ui-autocomplete li {
  list-style: none;
}

.ui-menu {
  list-style: none;
  padding: 2px;
  margin: 0;
  display: block;
  outline: none;
}

.ui-menu .ui-menu-item {
  margin: 0;
  padding: 0;
  width: 100%;
}
.ui-menu .ui-menu-divider {
  margin: 5px -2px 5px -2px;
  height: 0;
  font-size: 0;
  line-height: 0;
  border-width: 1px 0 0 0;
}
.ui-menu .ui-menu-item a {
  text-decoration: none;
  display: block;
  padding: 2px .4em;
  line-height: 1.5;
  min-height: 0; /* support: IE7 */
  font-weight: normal;
}
.ui-menu .ui-menu-item a.ui-state-focus,
.ui-menu .ui-menu-item a.ui-state-active {
  font-weight: normal;
  background: #b3d4fc;
  text-shadow: none;
}

.ui-menu .ui-state-disabled {
  font-weight: normal;
  margin: .4em 0 .2em;
  line-height: 1.5;
}

.simple_form input.auto_complete {
  background: url(<%= image_path 'menu-pull-down.png' %>) 99% center no-repeat,
              url(<%= image_path 'input.gif' %>) repeat-x,
              #FFF !important;
}

.simple_form input.auto_complete.loading {
  background: url(<%= image_path 'ajax-loader.gif' %>) 99% center no-repeat,
              url(<%= image_path 'input.gif' %>) repeat-x,
              #FFF !important;
}
