.simple_form .input {
  margin-bottom: 2em;
}

.simple_form .input.hidden {
  margin-bottom: 0;
}

.simple_form input:disabled, .simple_form textarea:disabled {
  background: #EFEFEF !important;
}

.simple_form label {
  display: block;
  font-size: 123.1%;
  margin-bottom: 0.5em;
}

.simple_form label.boolean, .simple_form label.collection_radio, .simple_form label.collection_check_boxes {
  display: inline;
}

.simple_form label.collection_radio {
  margin-right: 1em;
}

.simple_form abbr {
  border-bottom: 0;
  color: #FF2F2F;
}

.simple_form select.select[multiple], .simple_form input.string, .simple_form input.numeric, .simple_form input.password, .simple_form textarea.text {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background: #FFF url(<%= image_path 'input.gif' %>) repeat-x;
  border: solid 1px #C7C7C7;
  font-size: 116%;
  outline: 0;
  padding: 10px 5px;
  width: 100%;
}

.simple_form input.numeric, .simple_form input.decimal {
  text-align: right;
}

.simple_form input.modal {
  background: url(<%= image_path 'zoom.png' %>) 99% center no-repeat,
              url(<%= image_path 'input.gif' %>) repeat-x,
              #FFF;
}

.simple_form select.select {
  min-width: 50px;
}

.simple_form textarea.text {
  height: 125px;
}

.simple_form select.select[multiple]:focus, .simple_form input.string:focus, .simple_form input.numeric:focus, .simple_form input.password:focus, .simple_form textarea.text:focus {
  border-color: #A57F18;
}

.simple_form input.boolean, .simple_form input.radio {
  margin-right: 5px;
}

.simple_form .field_with_errors input.string, .simple_form .field_with_errors input.numeric, .simple_form .field_with_errors input.password, .simple_form .field_with_errors textarea.text {
  border: solid 1px #F9B4B4;
}

.simple_form .error {
  color: #BD0000;
  margin-top: 0.5em;
}

.simple_form .hint {
  color: #ABABAB;
  margin-top: 0.5em;
}

.simple_form .buttons {
  text-align: right;
}
