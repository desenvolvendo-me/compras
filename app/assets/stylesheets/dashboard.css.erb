#content.dashboard {
  padding-bottom: 0;
  padding-left: 0;
  padding-right: 0;
}

#content.dashboard .reports {
  margin-top: 1em;
}

#content.dashboard .notice, #content.dashboard .alert, #content.dashboard .help, #content.dashboard .actions {
  margin-left: 10px;
  margin-right: 10px;
}

#content.dashboard .links {
  text-shadow: 1px 1px 0px #FFF;
}

#content.dashboard .links ul {
  border-top: 1px solid #E0E0E0;
  margin: 0;
}

#content.dashboard .links li {
  background: #ECECEC;
  background: -o-linear-gradient(white, #ececec);
  background: -moz-linear-gradient(white, #ececec);
  background: -webkit-linear-gradient(white, #ececec);
  border-bottom: 1px solid #E0E0E0;
  display: block;
  list-style: none;
}

#content.dashboard .links li:hover {
  background: #FFF4C7;
  background: -o-linear-gradient(#fff4c7, #ffeb9f);
  background: -moz-linear-gradient(#fff4c7, #ffeb9f);
  background: -webkit-linear-gradient(#fff4c7, #ffeb9f);
  border-bottom-color: #EFDC94;
}

#content.dashboard .links a {
  background: url(<%= image_path 'link-arrow.png' %>) 99% center no-repeat;
  color: #555;
  display: block;
  height: 100%;
  padding: 1em;
  text-decoration: none;
}

#content.dashboard .links a span {
  color: #999;
  font-size: 85%;
  display: block;
}

#content.dashboard .links a:hover {
  background-image: url(<%= image_path 'link-arrow-hover.png' %>);
  color: #444;
  text-shadow: none;
}

#content.dashboard .links a:hover span {
  color: #383838;
}
