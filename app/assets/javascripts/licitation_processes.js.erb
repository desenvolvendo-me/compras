    $("#publications .nested-fields .hidden-fields").show();
    $("#publications .add-nested-record ").show();
    $(this).hide();
  });

  $("#tab-requestor .show-fields").click(function () {
    $("#tab-requestor .hidden-fields").show();
    $("#tab-requestor .add-nested-record ").show();
    $(this).hide();
  });

